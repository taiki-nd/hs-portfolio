<div class="body">
  
  <div class="space"></div>

  <h1>Galleryの検索結果</h1>
  <div class="container">
    <%= search_form_for @q, url: search_posts_path do |f| %>
      <%= f.collection_select :category_id_eq,Category.all,:id,:name,include_blank: 'カテゴリーで検索' %>
      <%= f.submit '検索' %>
    <% end %>
    <%= link_to "一覧に戻る", posts_path, class: "btn_standard" %>
  </div>
  <div class="grid">
    <% @results.each do |post| %>
      <div class="post">
        <%= link_to image_tag(post.image, class:"post_img"), post_path(post.id) %>
        <p class="info"><%= post.title %></p>
      </div>
    <% end %>
  </div>
  <div class="space"></div>

  <%= paginate @results %>

  <div class="space"></div>

</div>